{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#8B5CF6",
          "leading_diamond": "╭─",
          "trailing_diamond": "",
          "template": " {{ .UserName }} ",
          "properties": {
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#3B82F6",
          "leading_diamond": "[",
          "trailing_diamond": "]",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#10B981",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ✗{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#F59E0B",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " \uE235 {{ .Venv }} ",
          "properties": {
            "display_mode": "environment"
          }
        },
        {
          "type": "node",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#EC4899",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " \uE718 {{ .Version }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "foreground": "#ffffff",
          "background": "#6366F1",
          "template": " 󱑍 {{ .CurrentDate | date \"15:04\" }} "
        },
        {
          "type": "battery",
          "style": "diamond",
          "leading_diamond": "[",
          "trailing_diamond": "]",
          "foreground": "#ffffff",
          "background": "#0EA5E9",
          "template": " {{ if eq \"Charging\" .State }}󰂄{{ else }}{{ if gt .Percentage 80 }}󰁹{{ else if gt .Percentage 60 }}󰁿{{ else if gt .Percentage 40 }}󰂀{{ else if gt .Percentage 20 }}󰁻{{ else }}󰁺{{ end }}{{ end }} {{ .Percentage }}% "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#8B5CF6",
          "template": "╰─❯"
        }
      ]
    }
  ]
}
