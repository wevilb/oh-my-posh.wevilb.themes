{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "style": "full"
          },
          "template": "{{ if eq .Path \"~\" }}{{ else }}{{ .Path }}{{ end }}",
          "foreground": "#0077cc",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true
          },
          "template": " {{ .HEAD }}{{ if .Working.Changed }} *{{ end }}",
          "foreground": "#green",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\n‚ùØ ",
          "foreground": "#0077cc",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3
}
